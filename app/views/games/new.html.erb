<h1>New game</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p> -->
<div class ="letters">
  <% @letters.each do |element| %>
  <p class="letter"> <%= element %> </p>
  <% end %>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="longest_word" placeholder="What is the longest bord?">
  <input type="submit">
</form>


